@model IEnumerable<courierf.Models.Booking>

@{
    ViewBag.Title = "Index";
}

<h2>Orders</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Branch.Branch_address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Customer.Customer_name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.From_add)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Amount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Destination)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Branch.Branch_address)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Customer.Customer_name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.From_add)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Amount)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Destination)
        </td>
        <td>
            @if (User.IsInRole("BranchManager"))
            {
                @Html.ActionLink("Edit", "Edit", new { id = item.Booking_id })
            }
            &nbsp
            @Html.ActionLink("Details", "Details", new { id = item.Booking_id })
        </td>
    </tr>
}

</table>
